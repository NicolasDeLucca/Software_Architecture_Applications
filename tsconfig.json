{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "utils/*.ts",
      "config/*.ts",
      "db/*.ts",
      "taskLogic/*.ts", 
      "workers/*.ts", 
      "api/*.ts",
      "scripts/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]    
}